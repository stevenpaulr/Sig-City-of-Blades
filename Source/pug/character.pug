
                

.freebootersheet.flex-wrap

    //Left Column
    .col30.generalinfo
        .label.title(data-i18n='freebooter')
        +text-input('character_name', 'entername')
        .label.title(data-i18n='alignment')
        +text-input('alignment', 'enteralignment')
        .label.title(data-i18n='relationships')
        +textarea('relationships', 'enterrelationships')

    //Middle Column
    .col40.tracks.flex-wrap
        .col50
            .label.title.stresslabel(data-i18n='stress')
        .col50
            .label.title.harmlabel(data-i18n='harm')
        .trackholder
            .lefttrack
                .label(data-i18n='relaxed')
                .sublabel(data-i18n='+minor')
            .centertrack
                .centertrackrow
                    .hexboxcontainer
                        +checkbox('stress1','hexbox')
                    .hexboxcontainer
                        +checkbox('harm1','hexbox')
                .centertrackrow
                    .hexboxcontainer
                        +checkbox('stress2','hexbox')
                    .hexboxcontainer
                        +checkbox('harm2','hexbox')
            .righttrack 
                .label(data-i18n='healthy')
                .sublabel(data-i18n='nopenalty')

        .trackspacer
        .trackholder
            .lefttrack
                .label(data-i18n='tense')
                .sublabel(data-i18n='+moderate')
            .centertrack
                .centertrackrow
                    .hexboxcontainer
                        +checkbox('stress3','hexbox')
                    .hexboxcontainer
                        +checkbox('harm3','hexbox')
                .centertrackrow
                    .hexboxcontainer
                        +checkbox('stress4','hexbox')
                    .hexboxcontainer
                        +checkbox('harm4','hexbox')
                .centertrackrow
                    .hexboxcontainer
                        +checkbox('stress5','hexbox')
                    .hexboxcontainer
                        +checkbox('harm5','hexbox')
            .righttrack 
                .label(data-i18n='wounded')
                .sublabel(data-i18n='reducedeffect')
 
        .trackspacer
        .trackholder
            .lefttrack
                .label(data-i18n='overloaded')
                .sublabel(data-i18n='+major')
            .centertrack
                .centertrackrow
                    .hexboxcontainer
                        +checkbox('stress6','hexbox')
                    .hexboxcontainer
                        +checkbox('harm6','hexbox')
                .centertrackrow
                    .hexboxcontainer
                        +checkbox('stress7','hexbox')
                    .hexboxcontainer
                        +checkbox('harm7','hexbox')
                .centertrackrow
                    .hexboxcontainer
                        +checkbox('stress8','hexbox')
                    .hexboxcontainer
                        +checkbox('harm8','hexbox')
            .righttrack 
                .label(data-i18n='incapacitated')
                .sublabel(data-i18n='noactions')
        .trackholder.burnelim
            .trackholder
                .beleft.noborder
                    .label(data-i18n="burnout")
                .burnelimcenter1
                .beright.noborder
                    .label(data-i18n="eliminated")
            .trackholder
                .beleft
                    .sublabel(data-i18n="vice")
                    .hexboxcontainer
                        +checkbox('vice','hexbox')
                .burnelimcenter2
                .beright
                    .hexboxcontainer
                        +checkbox('dead','hexbox')
                    .sublabel(data-i18n="dead")
            .trackholder
                .beleft
                    .sublabel(data-i18n="apathy")
                    .hexboxcontainer
                        +checkbox('apathy','hexbox')
                .burnelimcenter3
                .beright
                    .hexboxcontainer
                        +checkbox('lost','hexbox')
                    .sublabel(data-i18n="lost")          
            .trackholder
                .beleft
                    .sublabel(data-i18n="fatigue")
                    .hexboxcontainer
                        +checkbox('fatigue','hexbox')
                .burnelimcenter4
                .beright
                    .hexboxcontainer
                        +checkbox('forgotten','hexbox')
                    .sublabel(data-i18n="forgotten")
            .trackholder
                .beleft
                    .sublabel(data-i18n="isolation")
                    .hexboxcontainer
                        +checkbox('isolation','hexbox')
                .burnelimcenter5
                .beright
                    .hexboxcontainer
                        +checkbox('consumed','hexbox')
                    .sublabel(data-i18n="consumed")


    //Right Column
    .col30.possessions.flex-wrap
        .col50
            .title.label(data-i18n='loadout')
            .hexboxcontainer
                +checkbox('lightloadout', 'hexbox')
                    .loadoutlabel(data-i18n='light')
            .hexboxcontainer
                +checkbox('mediumloadout', 'hexbox')
                    .loadoutlabel(data-i18n='medium')
            .hexboxcontainer
                +checkbox('heavyloadout', 'hexbox')
                    .loadoutlabel(data-i18n='heavy')

            .title.label.purselabel(data-i18n="purse")
            .sixcheckbox
                +6checkbox('purse','hexbox')
                    .sixboxlabel P


        .col50
            .title.label(data-i18n='stash')
            .sixcheckbox
                +6checkbox('stash1','hexbox')
                    .sixboxlabel 1
            .sixcheckbox
                +6checkbox('stash2','hexbox')
                    .sixboxlabel 2
            .sixcheckbox
                +6checkbox('stash3','hexbox')
                    .sixboxlabel 3

            .downtimebuttons
                +roll('fortune','fortune')(data-i18n="fortune roll").label
                +hidden-input('fortune')(value=0)
                +roll('preparation','preparation')(data-i18n="preparation roll").label
                +hidden-input('preparation')(value=0)



    .col33.culture
        .playbook-selector
            select(name='attr_culture')
                optgroup
                    option() #{translation["selectculture"]}
                    each culture in cultures
                        option(value=culture) #{translation[culture]}

        +text-input('culture_drive')(data-i18n-placeholder='drive').drive
        fieldset.repeating_cultureadvances
            .advancecheckholder
                +checkbox('advancecheck','advancecheck')
            +text-input('culadvname')(data-i18n-placeholder='advance_name')
            +textarea('culadvdescription')(data-i18n-placeholder='advance_description')

        .xpholder
