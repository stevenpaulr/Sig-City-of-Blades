            +newcheckbox('insightxp', 'xpbox')(value=3)
            +newcheckbox('insightxp', 'xpbox')(value=4)
            +newcheckbox('insightxp', 'xpbox')(value=5)
            +newcheckbox('insightxp', 'xpbox')(value=6)

        +roll('insight','insight')(data-i18n="insight").title.label
        +hidden-input('insight')(value=0)
